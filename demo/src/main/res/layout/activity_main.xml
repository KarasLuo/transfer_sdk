<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#dddddd"
        android:padding="60dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_input"
        android:gravity="center"
        android:hint="无数据"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_output"
        app:layout_constraintLeft_toLeftOf="@+id/tv_output"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:text="返回内容"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/tv_output"
        app:layout_constraintTop_toTopOf="@+id/tv_output"
        app:layout_constraintLeft_toLeftOf="@+id/tv_output"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:text="未连接:点我"/>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_output"
        app:layout_constraintBottom_toTopOf="@+id/btn_group"
        android:gravity="center"
        android:hint="字节数据 用单空格隔开"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/et_input"
        app:layout_constraintLeft_toLeftOf="@+id/et_input"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:text="写入内容"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#eeeeee"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_input"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_ble_read_voltage"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_ble_auto_detect"
            android:text="蓝牙读取电压"/>

        <Button
            android:id="@+id/btn_ble_auto_detect"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_ble_read_voltage"
            app:layout_constraintRight_toRightOf="parent"
            android:text="蓝牙单次检测"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>