<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_console"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:gravity="center"
        android:padding="@dimen/padding_edge_half"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_edge_half"
            android:textColor="#000000"
            android:text="Bulk/Control:"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sc_transfer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_edge_half"
            android:text="bulk"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_bulk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:visibility="visible"
        android:paddingStart="@dimen/padding_edge"
        android:paddingEnd="@dimen/padding_edge"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写入字节数据："/>
            <EditText
                android:id="@+id/et_bulk_buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="字节数据用空格隔开"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读取字节长度："/>
            <EditText
                android:id="@+id/et_bulk_len"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="要读取的字节个数"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_bulk_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="数据读写"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:visibility="gone"
        android:paddingStart="@dimen/padding_edge"
        android:paddingEnd="@dimen/padding_edge"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="RequestType："/>
            <EditText
                android:id="@+id/et_control_requesttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="单字节"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Request："/>
            <EditText
                android:id="@+id/et_control_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="单字节"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Value："/>
            <EditText
                android:id="@+id/et_control_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="双字节以空格隔开"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Index："/>
            <EditText
                android:id="@+id/et_control_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="双字节以空格隔开"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Buffer："/>
            <EditText
                android:id="@+id/et_control_buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="写入(字节)/读取(长度)"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_control_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="读取"/>
            <Button
                android:id="@+id/btn_control_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="写入"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>